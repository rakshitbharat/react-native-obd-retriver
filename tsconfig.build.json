{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib/typescript",
    "declarationDir": "lib/typescript",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/__tests__",
    "**/__mocks__",
    "example",
    "lib"
  ],
  "include": ["src"]
}